# Create the .gitignore file and add the initial content
Set-Content -Path .\.gitignore -Value @"
# Dependency directories
node_modules/

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# Runtime data
*.pid
*.seed
*.lock

# Coverage directory used by tools like istanbul
coverage/

# nyc test coverage
.nyc_output/

# dist directory
dist/

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Next.js
.next/

# SvelteKit
.svelte-kit/

# Nuxt.js
.nuxt/

# VS Code directory
.vscode/

# Build and output directories
build/
out/
"@
